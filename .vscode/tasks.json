{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:/msys64/mingw64/bin/g++.exe",
			"args": [
				"-std=c++20",
				"-g",
				"-Wall",
				"-Wextra",
				"-Wshadow",
				"-Wconversion",
				"-Wno-sign-compare",
				"-D_GLIBCXX_ASSERTIONS",
				"-D_GLIBCXX_DEBUG",
				"-D_DEBUG",
				"-ggdb3",
				"-fmax-errors=2",
				"-Wl,--stack,33554432",
				// "-O2",
				"${file}",
				"-o",
				"${workspaceRoot}/main.exe",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/msys64/mingw64/bin/g++.exe"
		},
		{
			"type": "process",
			"label": "Codeforces: Test and Submit",
			"command": "py",
			"args": [
				"submit.py",
				"-f",
				"${file}"
			],
			"detail": "test and submit to codeforces",
			"problemMatcher": []
		},
		{
			"type": "process",
			"label": "Codeforces: Test and Submit (Exact Name)",
			"command": "py",
			"args": [
				"submit.py",
				"-f",
				"${file}",
				"-e",
				"True"
			],
			"detail": "test and submit to codeforces with exact file name",
			"problemMatcher": []
		},
		{
			"type": "process",
			"label": "Codeforces: Test",
			"command": "py",
			"args": [
				"submit.py",
				"-f",
				"${file}",
				"-s",
				"False"
			],
			"detail": "test on codeforces",
			"problemMatcher": []
		},
		{
			"type": "process",
			"label": "Codeforces: Submit",
			"command": "py",
			"args": [
				"submit.py",
				"-f",
				"${file}",
				"-r",
				"False"
			],
			"detail": "submit to codeforces",
			"problemMatcher": []
		},
		{
			"type": "process",
			"label": "Codeforces: Submit (Exact Name)",
			"command": "py",
			"args": [
				"submit.py",
				"-f",
				"${file}",
				"-r",
				"False",
				"-e",
				"True"
			],
			"detail": "submit to codeforces with exact file name",
			"problemMatcher": []
		},
	]
}
